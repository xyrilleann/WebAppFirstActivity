@model WebAppXyrille.Web.Areas.Manage.ViewModels.Products.CreateViewModel
@{
    Layout = "~/areas/manage/views/shared/_managelayout.cshtml";
}

<h1>Create</h1>


<div class="container">
    <div class="row">
        <div class="col">
            <form method="post" action="/manage/products/create">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()

                <div class="form-group">
                    <label class="control-label">Name</label>
                    <input type="text" class="form-control" name="Name" placeholder="Enter a name" />
                </div>


                <div class="form-group">
                    <label class="control-label">Description</label>
                    <input type="text" class="form-control" name="Description" placeholder="Enter a description" />
                </div>

                <div class="form-group">
                    <label class="control-label">Quantity</label>
                    <input type="text" class="form-control" name="Quantity" placeholder="Enter a quantity" />
                </div>


                <div class="form-group">
                    <label class="control-label">Price</label>
                    <input type="text" class="form-control" name="Price" placeholder="Enter a price" />
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
                <a href="~/manage/products/index" class="btn btn-danger">Cancel</a>


            </form>
        </div>
    </div>
</div>
