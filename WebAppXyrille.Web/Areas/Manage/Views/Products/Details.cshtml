@model WebAppXyrille.Web.Infrastructures.Domain.Models.Product
@{
    Layout = "~/areas/manage/views/shared/_managelayout.cshtml";
}


<h1>Details</h1>


<div>
    <h4>Products</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            ProductStatus
        </dt>
        <dd class="col-sm-10">
            @Model.ProductStatus
        </dd>
        <dt class="col-sm-2">
            Quantity
        </dt>
        <dd class="col-sm-10">
            @Model.Quantity
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.Price.ToString("F")
        </dd>
    </dl>
</div>
<div>
    <a href="~/manage/products/edit/@Model.Id" class="btn btn-primary" asp-route-id="@Model.Id">Edit</a> |
    <a href="~/manage/products/index" class="btn btn-danger">Back to List</a>
</div>